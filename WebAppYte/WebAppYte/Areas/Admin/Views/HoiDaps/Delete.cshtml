@model WebAppYte.Models.HoiDap

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}



<h3>Bạn có chắc chắn muốn xóa phần hỏi đáp này không?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên bệnh nhân
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MabnNavigation.Tenbn)
        </dd>

        <dt>
            Tên bác sĩ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MandNavigation.Tendn)
        </dd>

        <dt>
            Câu hỏi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hoi)
        </dd>

        <dt>
            Trả lời
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dap)
        </dd>

        <dt>
            Ngày hỏi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngayhoi)
        </dd>
        <dt>
            Ngày trả lời
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaytl)
        </dd>

        <dt>
            Trạng thái
        </dt>

        <dd>
            @{ if (Model.Trangthai == 0)
                            {
                <h5 style="color:red">Chưa trả lời</h5> }
                            if (Model.Trangthai == 1)
                            {
                <h5 style="color:red">Đã trả lời</h5> } }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>

@model WebAppYte.Models.HoiDap

@using Microsoft.AspNetCore.Http
@using System.Text.Json;
@using WebAppYte.Models

@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var httpContext = HttpContextAccessor.HttpContext;
    var uJson = httpContext.Session.GetString("hoidap");
    var h = !string.IsNullOrEmpty(uJson) ? JsonSerializer.Deserialize<HoiDap>(uJson) : null;
}
<style type="text/css">
</style>
<br />
<div id="nivoslider" class="slides nivoSlider">

    <div class="nivo-directionNav"><a class="nivo-prevNav">Prev</a><a class="nivo-nextNav">Next</a></div>
    <div class="nivo-slice" name="0" style="left: 0px; width: 1530px; height: 160px; opacity: 1; overflow: hidden;">
        <div class="col-sm-12" style="position:absolute; width:1519px; height:auto; display:block !important; top:165px; left:170px;">


        </div>

    </div>

</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style=" float:left">
    <h3 style="color:orangered">Thêm mới câu hỏi</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Mabn, "Người hỏi", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.DropDownList("mabn", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Mabn, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Hoi, "Câu hỏi", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            <textarea cols="50" htmlAttributes="{ class = form-control }" id="hoi" name="hoi" rows="10"></textarea>
            @Html.ValidationMessageFor(model => model.Hoi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-6 col-md-6">
            <input type="submit" value="Gửi câu hỏi" class="btn btn-success" />
        </div>
    </div>
</div>
<div style="float:right">

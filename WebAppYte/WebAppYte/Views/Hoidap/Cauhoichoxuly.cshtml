
@model IPagedList<WebAppYte.Models.HoiDap>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{ ViewBag.Title = "Index";
   Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h2> Câu hỏi của bạn chờ xử lý </h2>
<button class="btn-default">@Html.ActionLink("Gửi câu hỏi mới", "Create", new { id = @ViewBag.id })</button>
<hr />
<div class="col-md-8">
    @foreach (var item in Model)
    {
        {
            if (item.Trangthai == 0)
            {
                <h5 style="color:red">Trạng thái :  Đang chờ giải đáp</h5> 
            }
        }
        <i class="fas fa-clock"></i><i>&nbsp;@item.Ngayhoi.Value.ToString("dd/MM/yyyy")</i>
        <h4 class="text-info">Câu hỏi:</h4>
        <h5 class="text-primary">@Html.DisplayFor(modelItem => item.Hoi)</h5>
        <h5 class="text-success"> @Html.DisplayFor(modelItem => item.Dap)</h5>  <hr />
    }
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @*@Html.PagedListPager(Model, page => Url.Action("Index",
        new { page }))*@
</div>

<div class="col-md-4">
    <h3 style="color:red"> Bản đồ phân bố cơ sở trên khu vực</h3>
    <img src="~/images/images/bando1.png" class="img-responsive" />

</div>


